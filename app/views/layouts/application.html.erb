<!DOCTYPE html>
<html>
  <head>
    <title>PublicDomain</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma-carousel@4.0.3/dist/css/bulma-carousel.min.css">
  </head>

  <body>
    <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <span class="navbar-item">
            <span class="icon">
                <%= link_to "", root_path, class: "fas fa-landmark fa-2x" %>
            </span>
          </span>
          <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false"
        onclick="document.querySelector('.navbar-menu').classList.toggle('is-active');" data-target="navbarBasicExample">

            <span></span>
            <span></span>
            <span></span>
          </a>
        </div>
        <div id="landingMenu" class="navbar-menu">
          <div class="navbar-end">
            <% if !user_signed_in? %>
            <span class="navbar-item">
              <%= link_to "Sign up", new_user_registration_path, class: "button" %>
            </span>
            <span class="navbar-item">
              <%= link_to "Log In", new_user_session_path,  class: "button is-primary" %>
            </span>
            <% end %>
            <% if user_signed_in? %>
            <span class="navbar-item">
              <%= link_to "New Item", new_item_path, class: "button is-primary" %>
            </span>
            <span class="navbar-item">
              <%= link_to "New Collection", new_collection_path, class: "button is-primary" %>
            </span>
            <span class="navbar-item">
              <%= link_to current_user.username, edit_user_registration_path %>
            </span>
            <span class="navbar-item">
              <%= button_to "Log out", destroy_user_session_path, method: :delete, data: { "turbo-method": :delete }, class: "button is-primary" %>
            </span>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>

  <script src="https://kit.fontawesome.com/392db0e3a2.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bulma-carousel@4.0.3/dist/js/bulma-carousel.min.js"></script>
</html>
