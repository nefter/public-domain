<p class="subtitle">Tool to store and read public domain materials</p> -->

<section class="hero is-primary is-fullheight">
  <!-- Hero head: will stick at the top -->
  <div class="hero-body">
    <% if !user_signed_in? %>
      <div class="container has-text-left">
        <p class="title">
          Public Domain
        </p>
        <p class="subtitle">
          Tool to store and read public domain materials
        </p>
      </div>
    <% end %>

    <% if user_signed_in? %>
      <div class="container is-fullhd">
        <h1 class="title">Movies</h1>
        <div class="columns">
          <% @items.each do |item| %>
            <div class="column">
              <div class="card">
                <div class="card-image">
                  <figure class="image is-3by4">
                    <% if item.image.attached? %>
                      <%= image_tag item.image %>
                      <%= image_tag item.image.preview(resize_to_fit: [600,400]) if item.image.previewable? %>
                    <% end %>
                    
                   </figure>
                </div>
                <div class="card-content">
                  <div class="media">
                    <div class="media-left">
                      <figure class="image is-48x48">
                        <%= image_tag item.user.avatar if item.user.avatar.attached? %>
                      </figure>
                    </div>
                    <div class="media-content">
                      <p class="title is-4" style="color:black"><%= item.title %></p>
                      <p class="subtitle is-6" style="color:black">Uploaded by: <%= item.user.username %></p>
                    </div>
                  </div>
              
                  <div class="content">
                    <%= item.description %>.
                    <p class="subtitle is-6" style="color:black">ID: <%= item.id %></p>
                    <p class="subtitle is-6" style="color:black">Published: <%= item.published %></p>
                    <p class="subtitle is-6" style="color:black">Views: <% if item.views? %> <%= item.views %> <%else%> Not enough <% end %></p>
                    <%= item.created_at.strftime("%-d/%-m/%y  %H:%M %Z") %><br/>
                    <button class="js-modal-trigger" data-target="modal-js-example">
                      View item in modal
                    </button>
                  </div>
                  <div id="modal-js-example" class="modal">
                    <div class="modal-background"></div>
                    <div class="modal-content">
                      <div class="box">
                        <p>Modal JS example</p>
                          <embed 
                          src="<%= polymorphic_url(item.image) %>" type="application/pdf" style="width:50vw; height: 100vh">
                      </div>
                    </div>
                    <button class="modal-close is-large" aria-label="close"></button>
                  </div> 
                </div>
              </div>            
            </div>
          <% end %> 
        </div>
      </div>
    <% end %>
  </div>
</section>