<p class="subtitle">Tool to store and read public domain materials</p> -->

<section class="hero is-primary is-fullheight">
  <!-- Hero head: will stick at the top -->
  <% if !user_signed_in? %>
    <div class="hero-body">
      <div class="container has-text-left">
        <p class="title">
          Public Domain
        </p>
        <p class="subtitle">
          Tool to store and read public domain materials
        </p>
      </div>
    </div>
  <% end %>

  <% if user_signed_in? %>
    <!-- Start Carousel -->
    <div class="hero-body">
      <div class="container has-text-centered">
        <h1 class="title">Items</h1>
      </div>
    </div>
    
    <div id="carousel-demo" class="carousel is-10 is-offset-2">
      <% @items.each do |item| %>
        <div class="js-modal-trigger is-2" data-target="modal-<%= item.id %>" style="margin: 10px!important;">
          <div class="item-<%= item.id %>">
            <!-- Slide Content -->
            <div class="card" style="cursor: pointer; margin:10px;">
              <div class="card-image">
                <figure class="image is-3by4">
                  <% if item.image.attached? %>
                    <%= image_tag item.image %>
                    <%= image_tag item.image.preview(resize_to_fit: [600,400]) if item.image.previewable? %>
                  <% end %>
                </figure>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <!-- End Carousel -->

    <% @items.each do |item| %>
      <div class="column">
        <div class="card-content">
          <div class="media">                   
          <div class="modal" id="modal-<%= item.id %>">
            <div class="modal-background"></div>
            <div class="modal-content">
              <div class="box">
                <h1 class="title" style="color:black"><%= item.title %></h1>
                  <embed class="is-6" src="<%= polymorphic_url(item.image) %>" type="application/pdf" style="width: 600px; max-width: 100%; min-height: 800px; max-height: 100%;" >
              </div>
            </div>
            <button class="modal-close is-large" aria-label="close"></button>
          </div> 
        </div>
      </div>
    <% end %> 

  <% end %> 

</section>