<section class="hero is-primary is-fullheight">
  <!-- Hero head: will stick at the top -->
  <% if !user_signed_in? %>
    <div class="hero-body">
      <div class="container has-text-left">
        <p class="title">
          Public Domain
        </p>
        <p class="subtitle">
          Tool to store and read public domain materials
        </p>
      </div>
    </div>
  <% end %>

  <% if user_signed_in? %>

    <div class="hero-body">
      <% if user_signed_in? %>
        <div class="container is-fullhd">
          <h1 class="title">Your uploaded Items</h1>
          <div class="columns is-multiline">
            <% @items.each do |item| %>
              <div class="column is-2">
                <div class="card">
                  <div class="card-image">
                    <figure class="image is-3by4">
                      <%= image_tag item.image if item.image.attached? %>
                    </figure>
                  </div>
                </div>            
              </div>
            <% end %> 
          </div>
        </div>
      <% end %> 
    </div>
  <% end %> 
</section>